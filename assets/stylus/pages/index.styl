body 
    relative()

header 
    relative()
    height 90vh
    bg-image(url(../img/bg@header.png))
    bg-size(cover)
    bg-position(center, center)
    
    .jumbotron
        bg-color(transparent)
        h1 
            margin-top 10px
            font-size 44px
            color blanco
        h5 
            color font-blue
            ttup()
            font-weight: 600

        p 
            color font-gris
            font-size 14px

        .imagen
            margin-top -15px
            img 
                margin 0 auto

            +below(50em)
                display none !important

        .btn 
            margin 20px 15px 20px 0px

.page-title
    h1 
        margin-top 10px
        font-size 44px
        color font-negro
    h5 
        color font-blue
        ttup()
        font-weight: 600

.hr-blue
    relative()
    margin-top: 30px
    margin-bottom: 10px
    border: 0
    border-top: 2px solid azul
    width 7%


.product-overview
    .iconos
        text-align: center
        margin 4em 0 3em
        h4 
            color font-negro
        p 
            color font-gris

.product-overview,
.take-a-closer-look
    relative()
    padding 6em 0em 3em

.take-a-closer-look 
    bg-color(#f2f2f2)
    .page-title
        h5
            padding-top 20px
        h1
            font-size 36px 
    .hr-blue 
        float left

    p 
        margin: 30px 0 20px
        color font-gris
        font-size 14px
    ul 
        list-style: none
        margin 0 0 0 0
        padding 0 0 0 0
        li 
            margin 10px 0 0 0 
            color font-negro
            img 
                padding 0 5px
                margin 0 auto

.cta
    bg-color(azul)
    padding 4em 0 2em
    .title
        h1 
            font-size 28px
            color blanco
            font-weight 300
            margin-top 8px
            span 
                font-weight 600

footer 
    padding 4em 0 2em
    bg-color(#15141a)
    ul
        list-style: none 
        padding: 0 0 0 0
        margin 0 0 0 0
        li 
            display inline-block
            margin: 0 20px

    p 
        color #444348
        padding 15px 0 5px
        ttup() 
        font-weight 600